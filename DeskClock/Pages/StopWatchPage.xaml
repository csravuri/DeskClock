<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeskClock.Pages.StopWatchPage"
			 xmlns:viewModel ="clr-namespace:DeskClock.ViewModels"
			 x:DataType="{x:Type viewModel:StopWatchViewModel}">

	<Grid RowDefinitions="*, *" 
		  ColumnDefinitions="*, *"
		  RowSpacing="20"
		  ColumnSpacing="20">
		<Label 
			Text="{Binding TimerNow}"
			FontSize="70"
			FontAttributes="Bold"
			Grid.ColumnSpan="2"
			VerticalOptions="EndAndExpand"
			HorizontalOptions="CenterAndExpand"/>
		<ImageButton 
			Source="play.png"
			IsVisible="{Binding IsRunning, Converter={StaticResource InvertedBoolConverter}}"	
			Command="{Binding StartCommand}"
			VerticalOptions="Start"
			HorizontalOptions="EndAndExpand"
			Grid.Row="1"/>
		<ImageButton 
			Source="pause.png" 
			Command="{Binding PauseCommand}"
			IsVisible="{Binding IsRunning}"		 
			VerticalOptions="Start"
			HorizontalOptions="EndAndExpand"
			Grid.Row="1"/>
		<ImageButton 
			Source="reset.png"
			Command="{Binding ResetCommand}"
			VerticalOptions="Start"
			HorizontalOptions="StartAndExpand"
			Grid.Row="1"
			Grid.Column="1"/>
	</Grid>
</ContentPage>