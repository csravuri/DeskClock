<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DeskClock.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:localPages="clr-namespace:DeskClock.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        
        <ShellContent 
            Title="Timer"
            ContentTemplate="{DataTemplate localPages:TimerPage}"
            Route="TimerPage"/>

        <ShellContent 
            Title="Clock"
            ContentTemplate="{DataTemplate localPages:ClockPage}"
            Route="ClockPage"/>

        <ShellContent 
            Title="Stopwatch"
            ContentTemplate="{DataTemplate localPages:StopWatchPage}"
            Route="StopWatchPage"/>
    </TabBar>

</Shell>
